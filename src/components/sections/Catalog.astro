---
import Product from "../ui/Product.jsx";
import shirt1 from '../../assets/images/products/shirt2.png';
import shirt1Model from '../../assets/images/products/shirt1-model.png';
import HistorySection from "../../assets/history-section.png";

---

<section class="relative w-full min-h-screen bg-[#fef1dc] pb-12">
  <img src={HistorySection.src} class="w-full h-full relative -top-12 m-0" alt="" />

  <div class="grid grid-cols-3 gap-y-8 gap-x-4 place-items-center ml-15">
    <!-- Parte izquierda -->
    <Product  rotation="-rotate-12" modelRotation="rotate-10" textRotation="-rotate-2" priceRotation="-rotate-8" shirt={shirt1} shirtModel={shirt1Model} backgroundColor="bg-orange-500" textColor="text-black" client:load/>
    
    <!-- Parte arriba centro (AJUSTADA) -->
    <div class="translate-y-12 translate-x-12 w-full h-full">
      <Product rotation="rotate-0" modelRotation="rotate-0" textRotation="rotate-0" priceRotation="rotate-0" shirt={shirt1} shirtModel={shirt1Model} backgroundColor="bg-blue-400" textColor="text-black" client:load/>
    </div>

    <!-- Parte derecha -->
    <Product rotation="rotate-12" modelRotation="rotate-8" textRotation="-rotate-2" priceRotation="rotate-8" shirt={shirt1} shirtModel={shirt1Model} backgroundColor="bg-gray-500" textColor="text-[#FFF4DC]" client:load/>

    <!-- Parte abajo izquierda -->
    <Product rotation="rotate-12" modelRotation="rotate-8" textRotation="-rotate-2" priceRotation="rotate-8" shirt={shirt1} shirtModel={shirt1Model} backgroundColor="bg-gray-700" textColor="text-[#FFF4DC]" client:load/>

    <!-- Centro tÃ­tulo -->
    <div class="">
      <h2 class="text-9xl relative top-2">ESENCIALES</h2>
      <h2 class="text-9xl bg-amber-500 px-4 -rotate-4 border-[#FFF4DC] border-8">MOONWAVE</h2>
    </div>

    <!-- Parte abajo derecha -->
    <Product  rotation="-rotate-12" modelRotation="rotate-10" textRotation="-rotate-2" priceRotation="-rotate-8" shirt={shirt1} shirtModel={shirt1Model} backgroundColor="bg-amber-500" textColor="text-black" client:load/>
  </div>
</section>
